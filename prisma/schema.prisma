generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  name        String
  brand       String
  description String
  price       Int
  mrp         Int
  tags        String
  sizes       String
  glowLevel   Int
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
